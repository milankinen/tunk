{
  "name": "tunk",
  "version": "0.0.1",
  "description": "NextGen view library",
  "author": "Matti Lankinen <m.lankinen@iki.fi>",
  "license": "MIT",
  "keywords": [],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "precompile": "rm -rf lib && mkdir lib",
    "compile": "tsc -p ./tsconfig.build.json",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "prettify": "prettier --write 'src/**/*.ts'",
    "fixlint": "tslint --fix --project .",
    "format": "npm run prettify && npm run fixlint",
    "ts-node": "ts-node -O '{\"module\": \"commonjs\"}'",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "prepublishOnly": "npm t && npm run lint && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.7",
    "jest": "^24.7.1",
    "prettier": "^1.17.0",
    "rollup": "^1.10.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "3.4.x",
    "typescript-snapshots-plugin": "^1.6.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/test/[^_].*\\.ts$",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
